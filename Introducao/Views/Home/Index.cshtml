@model Introducao.Models.Pessoa

@{
    ViewBag.Title = "Index";
}

<h2>Curso de ASP MVC</h2>

<p>Testando novas Possibilidades</p>
<br />
<br />

<form action="Home/Lista" method="post">
    <fieldset>
        <legend>Informações de Usuario</legend>


        <div>
            <label for=" PessoaId">Codigo</label>
        </div>
        <div>
            <input type="number" value="@Model.PessoaId" name="PessoaId" />
        </div>

        <div>
            <label for=" Name">Nome</label>
        </div>
        <div>
            <input type="text" value="@Model.Name" name="Name" />
        </div>

        <div>
            <label for=" Tipo">Tipo</label>
        </div>
        <div>
            <input type="text" value="@Model.Tipo" name="Tipo" />
        </div>

        <p><input type="submit" value="Enviar" /></p>

    </fieldset>
</form>

